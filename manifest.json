{
  "manifest_version": 3,
  "name": "Accessibilità Plus",
  "version": "1.0",
  "description": "Un'estensione per migliorare l'accessibilità web con riassunti, text-to-speech e interazione assistita.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tts"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}