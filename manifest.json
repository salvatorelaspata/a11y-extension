{
  "name": "Accessibilit√† Plus",
  "version": "0.2",
  "manifest_version": 3,
  "description": "An extension to improve web accessibility with summaries, text-to-speech and assisted interaction.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "sidePanel",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "minimum_chrome_version": "138",
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open Chat Interface"
  }
}